@page
@model UI.Pages.Consultants.Create

@{
    Layout = "_Admin";
}
<h1>Create</h1>

<h4>Consultant</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Consult.FirstName" class="control-label">First Name</label>
                <input type="text" asp-for="Consult.FirstName" class="form-control">
                <span asp-validation-for="Consult.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Consult.LastName" class="control-label">Last Name</label>
                <input type="text" asp-for="Consult.LastName" class="form-control">
                <span asp-validation-for="Consult.LastName" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>